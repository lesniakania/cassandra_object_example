<h1>Posts</h1>
<%= link_to 'Add post', new_post_path %>
<ul id="posts-list">
  <% @posts.each do |post| %>
    <li class="post">
      <%= link_to h(post.title), post_path(post), :class => 'title' %>
      <%= link_to 'Show', post_path(post) %>
      <%= link_to 'Edit', edit_post_path(post) %>
    </li>
  <% end %>
</ul>
